<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean title="sessionFactory" clazz="com.sparrow.orm.session.simple.ConfigureSessionFactory" init="initialize">
        <property title="configFile" value="classpath:conf/config4mysql.properties"/>
        <!--<property title="mappingSource" value="conf/table-conf.xml" />-->
        <property title="mapXml" value="classpath:eggs/sqlmap/*.xml"/>
    </bean>

    <bean title="operateTemplate" clazz="com.sparrow.orm.template.simple.NormalOperateTemplate">
        <property title="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean title="baseDao" clazz="com.sparrow.orm.dao.simple.NormalDao">
        <property title="operateTemplate" ref="operateTemplate"/>
        <property title="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>